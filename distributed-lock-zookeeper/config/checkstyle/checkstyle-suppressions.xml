<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <suppress checks="AvoidStarImport" files=".*"
              message="Using the '.*' form of import should be avoided - (org.junit.jupiter.api.Assertions\.\*|org.mockito.Mockito\.\*)"/>
    <suppress checks="MissingJavadocType" files="^.*(Test|IT)\.java$"
              message="Missing a Javadoc comment."/>
    <suppress checks="SummaryJavadoc" files="^.*(Test|IT)\.java$"
              message="Summary javadoc is missing"/>
</suppressions>
